<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9EC86"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/IdControlTitulo"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#2F9F80"
                android:ellipsize="none"
                android:gravity="center"
                android:text="OSCILOSCOPIO"
                android:textColor="#FA000000"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:typeface="monospace" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Button
                android:id="@+id/IdEncender"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondeado"
                android:text="Parar Grafico"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/IdBufferIn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="left|center_vertical"
                android:text="Dato: "
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="monospace" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/titulo_redondeado" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Button
                android:id="@+id/IdDesconectar"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondeado"
                android:text="Desconectar"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>